generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/all_in_one_store"
}

model Session {
  id          String    @id 
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model stores {
  id            BigInt               @id @default(autoincrement()) @db.UnsignedBigInt
  store         String               @unique(map: "stores_store_unique") @db.VarChar(255)
  token         String               @db.VarChar(255)
  created_at    DateTime?            @db.Timestamp(0)
  updated_at    DateTime?            @db.Timestamp(0)
}

model AppSettings{
  id                        BigInt       @id @default(autoincrement())
  store_id                 Int          
   isActive               Boolean        @default(false)
  app_name                String      @unique @db.VarChar(255) 
 appJsonData              Json             @map("app_json_data")
 created_at               DateTime        @default(now()) @db.Timestamp(0)
  updated_at               DateTime      @default(now()) @db.Timestamp(0)
 
}




enum stores_installed {
  VALUE_0 @map("0")
  VALUE_1 @map("1")
}

enum stores_is_first_time {
  VALUE_0 @map("0")
  VALUE_1 @map("1")
}